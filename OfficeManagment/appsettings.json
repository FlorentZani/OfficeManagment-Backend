{
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost\\sqlexpress;database=officemanagmentdb2;Encrypt=False;trusted_connection=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },

    "WirteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log- .txt",
          "rollingInterval": "Day",
          "rollOnFileSize": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich":["FromLogContext" ,"WithMachineName" ,"WithThreadId"]
    
  },
  "AllowedHosts": "*"
}
